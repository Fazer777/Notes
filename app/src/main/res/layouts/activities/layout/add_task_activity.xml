<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <CheckBox
        android:id="@+id/task_checkbox"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/edit_text_title"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/edit_text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:maxHeight="50dp"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/task_checkbox"
        app:layout_constraintEnd_toStartOf="@id/card_view_color_task"
        android:hint="Название"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:importantForAutofill="no"
        android:layout_margin="10dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_color_task"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="5dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_layout_subtask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_text_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_view_date_task"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        app:cardElevation="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_sub_items"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:minHeight="60dp"
            android:maxHeight="200dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_subtask_recyclerview"
            android:scaleX="0.9"
            android:scaleY="0.9"
            />

            <ImageButton
                android:id="@+id/image_button_add_subtask"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:tint="#FFFFFF"
                android:src="@drawable/ic_add_new"
                android:backgroundTint="#FF9100"
                app:layout_constraintTop_toBottomOf="@id/recycler_view_sub_items"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="10dp"
                android:contentDescription="Create subtask" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/text_view_date_task"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:hint="Выберите дату..."
        app:layout_constraintTop_toBottomOf="@id/card_view_layout_subtask"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        />

    <EditText
        android:id="@+id/task_edittext_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/text_view_date_task"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/subtask_material_btn_add"
        android:layout_margin="10dp"
        android:gravity="top"
        android:padding="10dp"
        android:inputType="textMultiLine"
        android:background="@drawable/rounded_edittext_states"
        android:hint="Добавить описание..."
        android:importantForAutofill="no"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/subtask_material_btn_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cornerRadius="10dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/task_edittext_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Добавить"
        />

</androidx.constraintlayout.widget.ConstraintLayout>