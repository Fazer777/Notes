<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:maxWidth="260dp"
    android:minWidth="150dp"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/id_shape_img_view_category"
        android:layout_height="36dp"
        android:layout_width="36dp"
        android:layout_margin ="5dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_category_background"
        android:foreground="@drawable/ic_category_foreground"
        android:src="@drawable/ic_category_background"
        />

    <TextView
        android:id="@+id/id_tv_category_name"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:maxWidth="200dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:hint="@string/title"
        />

</LinearLayout>